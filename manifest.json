{
    "manifest_version": 3,
    "name": "YouTube Channel Search",
    "version": "1.0",
    "description": "Search videos within a YouTube channel.",
    "permissions": [
      "activeTab",
      "https://www.googleapis.com/",
      "https://www.stands4.com/"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "128": "images/icon.png"
    }
  }
  